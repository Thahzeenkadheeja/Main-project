<main id="main" class="main">

    <div class="pagetitle">
        <h1>Manage Anouncements</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item">Anouncements</li>
                <li class="breadcrumb-item active">All-Anouncements</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->





    <section class="section">
        <a href="/admin/add-anouncement" class="btn btn-dark btn-sm mb-3">Send Anouncements</a>

        <div class="row">

            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">All Anouncements </h5>
                        <div class="table-responsive">
                            <table class="table" id="table">
                                <thead class="table-dark">
                                    <tr class="align-middle">
                                        <th scope="col">Date</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Sub Title</th>
                                        <th scope="col">By</th>
                                        <th scope="col">Message</th>
                                        <th scope="col">Delete</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    {{#each anouncements}}
                                    <tr class="align-middle">
                                        <td>{{formatDate this.createdAt}}</td>
                                        <td>{{this.title}}</td>
                                        <td>{{this.subtitle}}</td>

                                        <td>Admin</td>
                                        <td>{{this.message}}</td>

                                        <td>
                                            <a href="/admin/delete-message/{{this._id}}"
                                                onclick="return confirm('Are You Sure to Delete This ?')"
                                                class="btn btn-danger">Delete</a>
                                        </td>

                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>




        </div>
    </section>

</main><!-- End #main -->