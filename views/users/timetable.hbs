<main class="main">
    <style>
        .accordion-button:not(.collapsed) {
            color: var(--bs-accordion-active-color);
            background-color: transparent !important;
            box-shadow: inset 0 calc(-1* var(--bs-accordion-border-width)) 0 var(--bs-accordion-border-color);
        }
    </style>
    <div class="container">


        <section class="section">
            <div class="row">
                <div class="col-lg-12">
                    <h3>Time tables for class {{user.Class}}</h3> <br>

                    <div class="card p-3 shadow">
                        <div class="table-responsive">
                            <table class="table border table-bordered">
                                <thead>
                                    <tr>
                                        <th>Day</th>

                                        <th>Period 1</th>
                                        <th>Period 2</th>
                                        <th>Period 3</th>
                                        <th>Period 4</th>
                                        <th>Period 5</th>
                                        <th>Period 6</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each timetable}}
                                    <tr>
                                        <td><b>{{this.day}}</b></td>

                                        <td>{{this.teacher1}} </td>
                                        <td>{{this.teacher2}}</td>
                                        <td>{{this.teacher3}}</td>
                                        <td>{{this.teacher4}}</td>
                                        <td>{{this.teacher5}}</td>
                                        <td>{{this.teacher6}}</td>



                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>








                </div>
            </div>
        </section>
    </div>
</main>