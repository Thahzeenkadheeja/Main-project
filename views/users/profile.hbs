<style>
    label {
        font-size: 13px;
        margin-bottom: 10px;
    }
</style>
<main class="main">
    <!-- Login Wrapper Area -->
    <div class="login-wrapper mt-5 d-flex  align-items-center justify-content-center">
        <div class="container-lg mb-4">

            <!-- Register Form -->

            <div class="d-flex justify-content-between">
                {{!-- <a href="/" class="btn btn-sm btn-dark">
                    <i class="bi bi-arrow-left-short "></i> Back</a> --}}
                {{#if user}}
                <a href="/edit-profile/{{user._id}}" class="btn btn-sm btn-primary">
                    <i class="bi bi-pen "></i> Edit Profile</a>
                {{/if}}
            </div>

            <div class="card shadow p-4 mt-3">

                <div class="register-form mt-4">
                    <h4 class="mb-5 text-left">My Profile</h4>
                    {{#if user}}
                    <form action="#!" method="">
                        <div class="row g-1">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>First Name</label>
                                    <input class="form-control" type="text" name="Fname" value={{user.Fname}} readonly>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label>Last Name</label>
                                    <input class="form-control" type="text" name="Lname" value={{user.Lname}} readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>

                            <input class="form-control" type="email" name="Email" value={{user.Email}} readonly>
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>

                            <input class="form-control" type="number" name="Phone" value={{user.Phone}} readonly>
                        </div>
                        <div class="form-group">
                            <label>Address</label>

                            <textarea class="form-control" name="Address" readonly>{{user.Address}} </textarea>
                        </div>
                        <div class="row g-1">
                            <div class="col-lg-7">
                                <div class="form-group">
                                    <label>City</label>

                                    <input class="form-control" type="text" name="District" value={{user.District}}
                                        readonly>
                                </div>
                            </div>
                            <div class="col-lg-5">
                                <div class="form-group">
                                    <label>Pincode</label>

                                    <input class="form-control" type="number" name="Pincode" value={{user.Pincode}}
                                        readonly>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mt-2">
                            <label>Parent Name</label>
                            <input class="form-control" type="text" name="Pname" readonly value={{user.Pname}}>
                        </div>
                        <div class="form-group mt-2">
                            <label>Blood Group</label>
                            <input class="form-control" type="text" name="Blood" readonly value={{user.Blood}}>
                        </div>

                        <div class="form-group mt-2">
                            <label>Language</label>
                            <input class="form-control" type="text" name="language" readonly value={{user.language}}>
                        </div>

                    </form>
                    {{/if}}
                </div>

            </div>

        </div>
    </div>
</main>