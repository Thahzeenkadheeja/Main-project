<style>
    .header {
        background-color: black !important;
    }
</style>

<main class="main pt-5">
    <div class="container">

        <div class="pagetitle">
            <h1>My Tasks</h1>

        </div><!-- End Page Title -->

        <section id="services" class="services section">

            <div class="row">
                <div class="col-lg-12">
                    <a href="/" class="btn btn-dark btn-sm">Back</a>
                    <div class="card shadow mt-3">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table datatable table-bordered border">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Subject Details</th>

                                            <th data-type="date" data-format="YYYY/DD/MM"> Date</th>
                                            <th data-type="date" data-format="YYYY/DD/MM"> deadline</th>

                                            <th>Image</th>
                                            <th>Note</th>
                                            <th>Requirments</th>

                                            {{!-- <th>Attended Students</th> --}}

                                            <th>Manage</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each tasks}}
                                        <tr>
                                            <td>{{incremented @index}}</td>
                                            <td>
                                                <p class="mb-0"><b>Teacher : </b> {{this.teacher}}</p>
                                                <p class="mb-0"><b>Subject : </b> {{this.subject}}</p>
                                            </td>
                                            <td>{{formatDate this.date}}</td>
                                            <td class="text-danger">{{formatDate this.deadline}}</td>
                                            <td><a href="/images/task-images/{{this._id}}-1.png">
                                                    <img src="/images/task-images/{{this._id}}-1.png" width="50px"></a>
                                            </td>
                                            <td>{{this.note}}</td>
                                            <td>{{this.req}}</td>


                                            {{!-- <td> {{#each selectedUsers}}
                                                {{this}} ,
                                                {{else}}
                                                <li>No users selected</li>
                                                {{/each}}
                                            </td> --}}

                                            <td>
                                                <div class="">
                                                    <a href="/view-task/{{this._id}}" class="btn btn-dark btn-sm"><i
                                                            class="bi bi-pen"></i> Attend</a>
                                                    </form>
                                                </div>
                                            </td>

                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </section>
    </div>
</main><!-- End #main -->