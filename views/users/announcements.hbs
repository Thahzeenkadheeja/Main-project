<style>
    html,
    body {
        background-color: white;
    }
</style>

<main class="main ">

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">My Anouncements</h4>
            {{!-- <a href="/teacher/add-material" class="btn btn-dark">+ Add New Material</a> --}}
        </div>
        <div class="card p-5">
            <div class="row g-5">

                <div class="col-lg-12">
                    <div class="feedback-section ">
                        <a href="/" class="btn mb-3 btn-dark btn-sm">back</a>
                        <h5>All Anouncements</h5>
                        <hr>
                        {{#each announcements}}
                        <div class="card p-3 shadow mb-2">
                            <p>{{formatDate this.createdAt}}</p>
                            <p>
                                <strong class="">By {{this.by}}<br></strong>
                            </p>
                            <p class="mb-2">{{this.title}}</p>
                            <p class="mb-0">{{this.subtitle}}</p>
                            <p>{{this.message}}</p>
                        </div>
                        {{else}}
                        <p>No notifications available!</p>
                        {{/each}}
                    </div>
                </div>
            </div>



        </div>
    </div>
</main>