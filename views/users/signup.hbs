<body class="bg-gradient-primary">

    <!-- Login Wrapper Area -->
    <div class="login-wrapper d-flex  align-items-center justify-content-center">
        <div class="container mb-4">

            <div class="text-center px-4"><img class="login-intro-img" src="assets/img/bg-img/36.png" alt=""></div>
            <!-- Register Form -->
            {{!-- <h4 class="text-center text-white mb-3" style="font-weight: 600;">ET LAB<span
                    style="color: crimson;">.</span></h4> --}}
            <div class="card shadow p-4">

                <div class="register-form mt-4">
                    <h6 class="mb-4 text-center">Create A New Account</h6>
                    {{#if signInErr}}

                    <p class="text-danger text-center ">{{signInErr}}</p>

                    {{/if}}
                    <form action="/signup" method="POST" enctype="multipart/form-data" autocomplete="off">
                        <input type="hidden" name="date" id="datetime">
                        <div class="row g-1">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Fname" value="{{Fname}}"
                                        placeholder="Your First Name" pattern="[A-Za-z\s]+"
                                        title="Only letters are allowed">
                                    {{#if errors.fname}}<div class="text-danger">{{errors.fname}}</div>{{/if}}
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <input class="form-control" type="text" name="Lname" value="{{Lname}}"
                                        placeholder="Your Last Name" pattern="[A-Za-z\s]+"
                                        title="Only letters are allowed">
                                    {{#if errors.lname}}<div class="text-danger">{{errors.lname}}</div>{{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="email" name="Email" value="{{Email}}"
                                placeholder="Your Email">
                            {{#if errors.email}}<div class="text-danger">{{errors.email}}</div>{{/if}}
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="Phone" value="{{Phone}}"
                                placeholder="Your Phone Number">
                            {{#if errors.phone}}<div class="text-danger">{{errors.phone}}</div>{{/if}}
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input type="password" class="form-control form-control-user" id="exampleInputPassword"
                                    name="Password" value="{{Password}}" placeholder="Enter Password">
                                <button type="button" class="btn btn-outline-secondary" id="togglePassword">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            {{#if errors.password}}<div class="text-danger">{{errors.password}}</div>{{/if}}
                        </div>


                        <hr>
                        <h6>Other Details</h6>
                        <hr>

                        <div class="form-group">
                            <textarea class="form-control" name="Address"
                                placeholder="Your Address">{{Address}}</textarea>
                            {{#if errors.address}}<div class="text-danger">{{errors.address}}</div>{{/if}}
                        </div>


                        <div class="row g-1">
                            <div class="col-lg-6">
                                <label for="">District</label>
                                <input class="form-control" type="text" name="District" id="district"
                                    value="{{District}}" placeholder="Your District" pattern="[A-Za-z]+"
                                    title="Only letters are allowed">
                                {{#if errors.district}}<div class="text-danger">{{errors.district}}</div>{{/if}}

                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label for="">Pincode</label>
                                    <input class="form-control me-2" type="number" name="Pincode" value="{{Pincode}}"
                                        placeholder="Your Pincode"
                                        onkeypress="return event.charCode >= 48 && event.charCode <= 57">
                                    {{!-- <button class="btn btn-primary" type="button" id="submit">Check</button> --}}
                                    {{#if errors.pincode}}<div class="text-danger">{{errors.pincode}}</div>{{/if}}
                                </div>
                            </div>
                        </div>

                        <label for="">Your Parent Name</label>
                        <input class="form-control" type="text" name="Pname" id="pname" value="{{Pname}}"
                            placeholder="Parent Name" pattern="[A-Za-z\s]+" title="Only letters are allowed">
                        {{#if errors.pname}}<div class="text-danger">{{errors.pname}}</div>{{/if}}

                        {{!-- <label for="" class="mt-2">Student Blood Group</label>
                        <input class="form-control" type="text" name="Blood" id="blood" value="{{Blood}}"
                            placeholder="Blood Group">
                        {{#if errors.blood}}<div class="text-danger">{{errors.blood}}</div>{{/if}} --}}

                        <label for="" class="mt-2">Student Blood Group</label>
                        <select class="form-select" name="Blood" id="blood" aria-label="Default select example">
                            <option selected disabled>Select Blood Group</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>


                        </select>


                        <label for="" class="mt-2">Select Language</label>
                        <select class="form-select" name="language" aria-label="Default select example">
                            <option selected disabled>Select Language</option>
                            <option value="Malayalam">Malayalam</option>
                            <option value="English">English</option>
                            <option value="Hindi">Hindi</option>
                            <option value="Other">Other</option>

                        </select>

                        <label for="" class="mt-2">Your Class</label>
                        <select class="form-select" name="Class" aria-label="Default select example" required>
                            <option selected disabled>Select Class</option>
                            <option value="1st">1st</option>
                            <option value="2nd">2nd</option>
                            <option value="3rd">3rd</option>
                            <option value="4th">4th</option>
                            <option value="5th">5th</option>
                            <option value="6th">6th</option>
                            <option value="7th">7th</option>

                        </select>

                        {{!-- <input class="form-control" type="text" name="Class" id="class" value="{{Class}}"
                            placeholder="Your class" required>
                        {{#if errors.class}}<div class="text-danger">{{errors.class}}</div>{{/if}} --}}


                        <div class="form-group ">
                            <label>Your Photo</label>
                            <input class="form-control" name="Image" accept="image/*" value="{{Image}}" type="file"
                                required>
                            {{#if errors.Image}}<div class="text-danger">{{errors.Image}}</div>{{/if}}
                        </div>


                        <button class="btn btn-dark mt-3 w-100" type="submit">Signup</button>
                    </form>

                </div>
                <!-- Login Meta -->
                <div class="login-meta-data text-center">
                    {{!-- <a class="stretched-link forgot-password d-block mt-3 mb-1"
                        href="page-forget-password.html">Forgot
                        Password?</a> --}}
                    <p class="mb-0 mt-3" style="font-size: ;">Already have an account? <a class="" href="/signin">Signin
                            Now</a>
                    </p>
                </div>
            </div>

        </div>

    </div>
</body>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        function searchPin() {
            let pin = document.getElementById("text").value;
            $.getJSON("https://api.postalpincode.in/pincode/" + pin, function (data) {
                createHTML(data);
            });

            function createHTML(data) {
                var htmlElements = " ";
                var msg = "";

                // Check if PostOffice array exists and has items
                if (data[0].PostOffice && data[0].PostOffice.length) {
                    // Limit to the first item in the PostOffice array
                    var postOffice = data[0].PostOffice[0];

                    // Set District and State input fields
                    document.getElementById("district").value = postOffice.District || ''; // Update District field
                    document.getElementById("state").value = postOffice.State || ''; // Update State field

                    // Create HTML for the first PostOffice item
                    htmlElements += '<div class="col-sm-4"><div class="card"><div class="list-group"><h4>' + postOffice.District + '</h4><p>PostOffice :<span class="pull-right">' + postOffice.State + '</span></p></div></div></div>';
                } else {
                    alert('Enter Valid pincode');
                }

                // Update the HTML content
                var htmlView = document.getElementById("mkslider");
                htmlView.innerHTML = htmlElements;
                var msgView = document.getElementById("total-msg");
                msgView.innerHTML = msg;
            }

            setTimeout(function () {
                $('#close').trigger('click');
            }, 3000);
        }

        $(document).on("click", '#close', function () {
            $('#total-msg').remove();
        });

        document.getElementById("submit").addEventListener("click", searchPin);
    });

</script>

<script>
    // Get current date and time
    const now = new Date();
    const year = now.getFullYear();
    const month = (now.getMonth() + 1).toString().padStart(2, '0');
    const day = now.getDate().toString().padStart(2, '0');
    const hours = ((now.getHours() + 11) % 12 + 1).toString().padStart(2, '0'); // Convert to 12-hour format
    const minutes = now.getMinutes().toString().padStart(2, '0');
    const ampm = now.getHours() >= 12 ? 'PM' : 'AM';

    // Set default value to current date and time in 12-hour format with AM/PM
    const defaultDateTime = `${year}-${month}-${day}T${hours}:${minutes}`;
    document.getElementById('datetime').value = defaultDateTime;
</script>

<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordField = document.getElementById("exampleInputPassword");
        const icon = this.querySelector("i");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    });
</script>