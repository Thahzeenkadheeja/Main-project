<main class="main pt-5">

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Your Home Works</h4>
            <a href="/teacher/add-hw" class="btn btn-dark">+ Add New Home Work</a>
        </div>
        <div class="card">
            <div class="card-body">



                <h5 class="card-title">All Home Works</h5>



                <div class="table-responsive">
                    <!-- Table with stripped rows -->
                    <table class="table table-bordered datatable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Added Date</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Deadline</th>
                                <th>Class</th>
                                <th>Subject</th>
                                <th>Chapter Details</th>
                                <th>Note</th>
                                <th>Image</th>
                                <th>Manage</th>
                                {{!-- <th>Manage</th> --}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each homeworks}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{formatDate this.date}}</td>
                                <td>{{formatDate this.deadline}}</td>
                                <td>{{this.Class}}</td>
                                <td>{{this.subject}}</td>

                                <td>Ch No. {{this.no}} | {{this.name}}</td>
                                <td>{{this.note}}</td>
                                <td>
                                    <a href="/images/task-images/{{this._id}}-1.png">
                                        <img src="/images/homework-images/{{this._id}}.png" width="50px" alt=""></a>
                                </td>
                                {{#if this.isDisable}}
                                <td>
                                    <button class="btn btn-secondary btn-sm" disabled>Blocked</button>
                                </td>
                                {{else}}
                                <td>
                                    <a href="/teacher/delete-task/{{this._id}}" class="btn btn-danger btn-sm">Delete</a>

                                </td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- End Table with stripped rows -->
            </div>
        </div>
    </div>
    </div>


    <script>
        function deleteMaterial(id, wname) {
            Swal.fire({
                title: `Are you sure you want to delete "${wname}"?`,
                text: '',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#33ff68',
                cancelButtonColor: '#d29eee',
                confirmButtonText: 'Yes!',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the delete route if confirmed
                    window.location.href = `/builder/delete-material/${id}`;
                }
            });
        }
    </script>