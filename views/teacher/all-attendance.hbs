<main class="main pt-5">

    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mt-3 mb-3">Manage Attendance</h4>
            <a href="/teacher/classes" class="btn btn-dark">+ Add Attendance</a>
        </div>
        <div class="card">
            <div class="card-body">



                <h5 class="card-title">All Attendance</h5>



                <div class="table-responsive">
                    <!-- Table with stripped rows -->
                    <table class="table table-bordered datatable">
                        <thead>
                            <tr>
                                <th>No.</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Date</th>
                                <th data-type="date" data-format="YYYY/DD/MM">Subject</th>

                                <th>Class</th>
                                <th>Period</th>
                                <th>Present</th>
                                <th>Absent</th>
                                {{!-- <th>Manage</th> --}}
                            </tr>
                        </thead>
                        <tbody>
                            {{#each attendances}}
                            <tr>
                                <td>{{incremented @index}}</td>
                                <td>{{formatDate this.date}}</td>
                                <td>{{this.subject}}</td>
                                <td>{{this.Class}}</td>
                                <td>{{this.period}}</td>
                                <td class="text-success"> {{#each present}}
                                    {{this}} ,
                                    {{else}}
                                    <li>No Presents</li>
                                    {{/each}}
                                </td>
                                <td class="text-danger"> {{#each absent}}
                                    {{this}} ,
                                    {{else}}
                                    <li>No Absents</li>
                                    {{/each}}
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
                <!-- End Table with stripped rows -->
            </div>
        </div>
    </div>
    </div>


    <script>
        function deleteMaterial(id, wname) {
            Swal.fire({
                title: `Are you sure you want to delete "${wname}"?`,
                text: '',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#33ff68',
                cancelButtonColor: '#d29eee',
                confirmButtonText: 'Yes!',
                cancelButtonText: 'No'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Redirect to the delete route if confirmed
                    window.location.href = `/builder/delete-material/${id}`;
                }
            });
        }
    </script>